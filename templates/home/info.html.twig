{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


    {% if app.user %}
        <div class="example-wrapper">
            <ul>
                <li>Mon nom : {{ app.user.firstname }}</li>
                <li>Mon prénom :  {{ app.user.lastname }}</li>
            </ul>
            <a href="{{ path('form_crea_article')}}"><button>Créer un nouvel article</button></a>
            <a href="{{ path('list_articles')}}"><button>Voir la liste des articles</button></a>
        </div>
<div class="mb-3">
    You are logged in as {{ app.user.username }} <a href="{{ path('app_logout') }}">Logout</a>
</div>

        {% else %}
            <div class="example-wrapper">
                <p>Vous n'etes pas connecté</p>
                <a href = "{{ path('app_login') }}"><button>Se connecter</button></a>
                <a href = "{{ path('register') }}"><button>Créer un compte</button></a>
            </div>

    {% endif %}



{% endblock %}
